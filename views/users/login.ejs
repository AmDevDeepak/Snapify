<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
     <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,900;1,700&display=swap" rel="stylesheet">         
    <title>Snapify</title>
</head>

<body>
    <div class="olduser">
    <% if (error && error.length > 0) { %>
    <div id="customErrorAlert">
        <div id="icon"><i class="fa-solid fa-circle-xmark"></i></div>
        <p><%=error%></p>
    </div>
    <% } %>
    <% if (success && success.length > 0) { %>
    <div id="customSuccessAlert">
        <div id="icon"><i class="fa-solid fa-circle-xmark"></i></div>
        <p><%=success%></p>
    </div>
    <% } %>
                <div class="welcome-text">Login To <span>Snapify</span></div>
                <div class="tagline-text">Snapify "Capture Moments, Share Stories."</div>
                <form action="/login" method="post" class="needs-validation" novalidate>

                    <div class="field">
                        <label for="username">Username</label>
                        <input id="username" type="text" name="username" placeholder="Enter username" class="form-control"
                            required spellcheck="false">
                        <!-- Add the following feedback element for validation -->
                        <div class="invalid-feedback">
                            Username*
                        </div>
                    </div>

                    <div class="field">
                        <label for="password">Password</label>
                        <input type="password" name="password" placeholder="Enter password"
                            class="form-control" required>
                        <!-- Add the following feedback element for validation -->
                        <div class="invalid-feedback">
                            Password*
                        </div>
                    </div>


                    <button class="btn btn-primary">Login</button>
                </form>
                <div class="a-div"><a href="/signup">Don't have an account ? SignUp</a></div>
            </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-e51BSSUqbgI1s9DxS2iFGe8b5GaiMvxCew7F7rvDSNc6O4vPbRTBb5Knw23HxAM9" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    <script>
        setTimeout(function () {
            var customErrorsAlert = document.getElementById('customErrorAlert');
            if (customErrorAlert) {
                customErrorAlert.remove();
            }
        }, 2000);
        setTimeout(function () {
            var customSuccessAlert = document.getElementById('customSuccessAlert');
            if (customSuccessAlert) {
                customSuccessAlert.remove();
            }
        }, 2000);
    </script>
</body>
</html>
