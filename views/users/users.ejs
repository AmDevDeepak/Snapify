<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/users.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,900;1,700&display=swap" rel="stylesheet">         
    <title>Snapify</title>
</head>
<body>
    <div class="content">
        <div class="search-container">
        <!-- <a class="backBtn" href="/posts"><i class="fa-solid fa-arrow-left"></i></a> -->
        <div class="search-form">
        <form action="/users" method="get">
            <div class="field">
            <label for="name">Search by Name:</label>
            <input type="text" id="name" name="name" value="<%= query %>" placeholder="Search by Name" spellcheck="false">
            </div>
            <button type="submit"><img src="/images/search-form.png" alt=""></button>
        </form>
        </div>
        <!-- Display users -->
        <div class="users">
            <% users.forEach(user => { %>
                <div class="user">
                    <a class="user-det" href="/profile/<%=user._id%>">
                    <img src="<%= user.dp.url %>" alt="<%= user.name %>'s DP">
                    <p><%= user.name %></p>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
    </div>
</body>
</html>